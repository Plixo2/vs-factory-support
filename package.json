{
  "name": "factory-support",
  "displayName": "Factory Support",
  "description": "Factory Precompiler Extension for VS Code",
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "devDependencies": {
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.45.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w"
  },
  "activationEvents": [
    "onCommand:workbench.action.tasks.runTask"
  ],
  "main": "./out/customTaskProvider",
  "contributes": {
    "languages": [
      {
        "id": "factory",
        "aliases": [
          "Factory Precompiler",
          "factory"
        ],
        "extensions": [
          ".factory"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/icon.png",
          "dark": "./icons/icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "factory",
        "scopeName": "source.factory",
        "path": "./syntaxes/factory.tmLanguage.json",
        "embeddedLanguages": {}
      }
    ],
    "taskDefinitions": [
      {
        "type": "Factory"
      }
    ]
  }
}
